# Use Node.js 18 LTS slim image
FROM node:18-slim

# Set working directory
WORKDIR /app

# Install git for npm dependencies
RUN apt-get update && apt-get install -y \
    git \
    && rm -rf /var/lib/apt/lists/*

# Create a non-root user (skip if UID 1000 exists)
RUN id -u 1000 > /dev/null 2>&1 || useradd -m -u 1000 developer

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy the rest of the application
COPY . .

# Expose ports
EXPOSE 3000 19000 19001 19002

# Start development server
CMD ["npm", "start"] 